<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create New Blog</h1>
        <div style="width: 60%; margin: 20px auto;">
            <form action="/blogs" method="POST">
                <label>Title</label>
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Title">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input class="form-control" type="text" name="image" placeholder="Image">
                </div>
                <div class="form-group">
                    <label>Blog Content</label>
                    <textarea class="form-control" rows="20" cols="100" name="blog[body]" placeholder="Blog Content"></textarea>
                </div>
                <input class="btn btn-block btn-primary btn-lg" type="submit">
            </form>
            <a href="/blogs">Go Back</a>
        </div>
        
    </div>
</div>


<% include ../partials/footer %>