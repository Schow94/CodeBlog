<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a New Comment to <%= blog.title %></h1>
        <div style="width: 60%; margin: 20px auto;">
            <form action="/blogs/<%= blog._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="text" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block btn-primary">Submit</button>
                </div>
            </form>    
            <a href="/blogs/<%= blog._id %>">Go Back</a>
        </div>
        
    </div>
</div>








<% include ../partials/footer %>

